{% extends "_main.jinja" %}

{% block title %} Login {% endblock %}

{% block main %}

<form class = "text-center" action="{{ url_for("change_password") }}" method="post">
    {{ form.csrf_token }}
    <p>
        {{ form.old_password.label }}
        {{ form.old_password() }}
    </p>
    <p>
        {{ form.new_password.label }}
        {{ form.new_password() }}
    </p>
    <input class="btn btn-primary" type="submit" value="change">
</form>

{% endblock %}